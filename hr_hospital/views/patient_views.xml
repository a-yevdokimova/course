<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="patient_form" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                        <field name="name"/>
                        <field name="second_name"/>
                        <field name="is_child"/>
                        <field name="age"/>
                        <field name="gender"/>
                        </group>
                        <notebook>
                            <page string="my notebook">
                                <h1>Hello</h1>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_tree" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="second_name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>


    <record id="patient_act_window" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="patient_menu"
        action="patient_act_window"
        parent="hr_hospital_menu"
        name="Patient"
        sequence="10"/>

</odoo>
