<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="patient_form" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_patient_visits" string="View Patient Visits" type="object"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="second_name"/>
                            <field name="is_child"/>
                            <field name="gender"/>
                            <field name="doctor_id"/>
                            <field name="birthday"/>
                            <field name="age"/>
                            <field name="passport"/>
                            <field name="contact_person"/>
                        </group>
                        <notebook>
                            <page string="my notebook">
                                <h1>Hello</h1>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_tree" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="second_name"/>
                <field name="is_child"/>
                <field name="gender"/>
                <field name="doctor_id"/>
                <field name="birthday"/>
                <field name="age"/>
                <field name="passport"/>
                <field name="contact_person"/>
            </tree>
        </field>
    </record>

    <record id="patient_search_view" model="ir.ui.view">
        <field name="name">patient.search.view</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="phone"/>
            </search>
        </field>
    </record>

    <record id="patient_act_window" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
