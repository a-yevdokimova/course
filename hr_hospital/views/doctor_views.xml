<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="doctor_form" model="ir.ui.view">
        <field name="name">doctor.form</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="second_name"/>
                            <field name="doctor_role" widget="radio"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="specialty"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="image" widget="image"/>
                        </group>
                        <notebook>
                            <page string="my notebook">
                                <h1>Hello</h1>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_tree" model="ir.ui.view">
        <field name="name">doctor.tree</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="second_name"/>
                <field name="doctor_role" widget="radio"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="specialty"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="image" widget="image"/>
            </tree>
        </field>
    </record>


    <record id="doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="doctor_menu"
              action="doctor_act_window"
              parent="hr_hospital_menu"
              name="Doctor"
              sequence="10"/>

</odoo>
