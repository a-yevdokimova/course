<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="doctor_form" model="ir.ui.view">
        <field name="name">doctor.form</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="second_name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="specialty"/>
                            <field name="is_intern"/>
                            <field name="mentor_id" invisible="not is_intern"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="image" widget="image"/>
                        </group>
                        <notebook>
                            <page string="my notebook">
                                <h1>Hello</h1>
                            </page>
                        </notebook>
                    </group>
                    <field name="intern_ids" mode="kanban"/>
                        <kanban>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="specialty"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click'">
                                        <div class="oe_kanban_details">
                                            <field name="name"/>
                                        </div>
                                        <div class="oe_kanban_bottom">
                                            <field name="age"/>
                                            <field name="gender"/>
                                            <field name="specialty"/>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_tree" model="ir.ui.view">
        <field name="name">doctor.tree</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="second_name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="specialty"/>
                <field name="is_intern"/>
                <field name="mentor_id" invisible="not is_intern"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="image" widget="image"/>
            </tree>
        </field>
    </record>

    <record id="doctor_search_view" model="ir.ui.view">
        <field name="name">doctor.search.view</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Інтерни" name="is_mentor" domain="[('is_intern', '=', True)]"/>
                <filter string="Ментори" name="is_intern" domain="[('is_intern', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">doctor</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

</odoo>
